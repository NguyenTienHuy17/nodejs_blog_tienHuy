<div class="mt-4">
    <h3>Tạo khóa học mới</h3>

    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Nhập tên</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
        </div>
        <div class="form-group">
            <label for="description">Nhập mô tả</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="Enter description">
        </div>
        <div class="form-group">
            <label for="video">Nhập video id</label>
            <input type="text" class="form-control" id="video" name="video" placeholder="Enter video id">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>